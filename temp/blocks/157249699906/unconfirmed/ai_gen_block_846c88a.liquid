{% doc %}
  @prompt
    blocks in a grid of 3 columns, where I can upload an image, title, sub-title and button, Call the section "Newsletter Archive", Style the button the same as used elsewhere on the website., Revert (delete the last instruction)
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-newsletter-archive-{{ ai_gen_id }} {
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-newsletter-archive-container-{{ ai_gen_id }} {
    max-width: 1350px;
    margin: 0 auto;
  }

  .ai-newsletter-archive-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  @media (max-width: 991px) {
    .ai-newsletter-archive-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 575px) {
    .ai-newsletter-archive-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }

  .ai-newsletter-card-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    height: 100%;
    background-color: #ffffff;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-newsletter-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
  }

  .ai-newsletter-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-newsletter-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-newsletter-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-newsletter-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-newsletter-content-{{ ai_gen_id }} {
    padding: 20px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .ai-newsletter-title-{{ ai_gen_id }} {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 10px;
    color: {{ block.settings.title_color }};
  }

  .ai-newsletter-subtitle-{{ ai_gen_id }} {
    font-size: 0.95rem;
    color: {{ block.settings.subtitle_color }};
    margin: 0 0 20px;
    flex-grow: 1;
    line-height: 1.5;
  }

  .ai-newsletter-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    text-align: center;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .ai-newsletter-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    transform: translateY(-2px);
  }
{% endstyle %}

<div class="ai-newsletter-archive-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-newsletter-archive-container-{{ ai_gen_id }}">
    <div class="ai-newsletter-archive-grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign image_key = 'item_' | append: i | append: '_image'
          assign title_key = 'item_' | append: i | append: '_title'
          assign subtitle_key = 'item_' | append: i | append: '_subtitle'
          assign button_text_key = 'item_' | append: i | append: '_button_text'
          assign button_link_key = 'item_' | append: i | append: '_button_link'

          assign item_image = block.settings[image_key]
          assign item_title = block.settings[title_key]
          assign item_subtitle = block.settings[subtitle_key]
          assign item_button_text = block.settings[button_text_key]
          assign item_button_link = block.settings[button_link_key]
        %}

        <div class="ai-newsletter-card-{{ ai_gen_id }}">
          <div class="ai-newsletter-image-wrapper-{{ ai_gen_id }}">
            {% if item_image %}
              <img
                src="{{ item_image | image_url: width: 600 }}"
                alt="{{ item_image.alt | escape }}"
                class="ai-newsletter-image-{{ ai_gen_id }}"
                loading="lazy"
                width="600"
                height="600"
              >
            {% else %}
              <div class="ai-newsletter-image-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>

          <div class="ai-newsletter-content-{{ ai_gen_id }}">
            {% if item_title != blank %}
              <h3 class="ai-newsletter-title-{{ ai_gen_id }}">{{ item_title }}</h3>
            {% endif %}

            {% if item_subtitle != blank %}
              <p class="ai-newsletter-subtitle-{{ ai_gen_id }}">{{ item_subtitle }}</p>
            {% endif %}

            {% if item_button_text != blank %}
              <a
                href="{{ item_button_link | default: '#' }}"
                class="ai-newsletter-button-{{ ai_gen_id }}"
              >
                {{ item_button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

