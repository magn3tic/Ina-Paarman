<section class="content-area banner-style-3">
    {% if section.settings.background_image %}
        <div class="half_bg d-none d-lg-block" style="background: url({{ section.settings.background_image | image_url }}) no-repeat scroll center center/cover"></div>
    {% endif %}
    
    <div class="container">
        {% if section.settings.pasta_shape_image %}
            <img src="{{ section.settings.pasta_shape_image | image_url }}" alt="Shape Image" class="pasta_shape" />
        {% endif %}
        
        <div class="row">
            <div class="col-sm-6 col-md-7 order-md-2 order-sm-2 order-1">
                {% if section.settings.mobile_image %}
                    <div class="content-img d-lg-none">
                        <img src="{{ section.settings.background_image | image_url }}" alt="{{ section.settings.background_image.alt | escape }}" />
                    </div>
                {% endif %}
            </div>
            
            <div class="col-sm-6 col-md-5 order-md-1 order-sm-1 order-2">
                <div class="banner-text">
                   
                    
                    {% if section.settings.heading != '' %}
                        <h1 class="heading">{{ section.settings.heading }}</h1>
                    {% endif %}
                    
                    {% if section.settings.paragraph_1 != '' %}
                        {{ section.settings.paragraph_1 }}
                    {% endif %}

                    {% if section.settings.cta_link != blank %}
                      <a href="{{ section.settings.cta_link }}" class="cta_btn btn_default">
                        {{ section.settings.cta_text }}
                        <img src="https://cdn.shopify.com/s/files/1/0583/8415/4690/files/arrow-right-white.svg" alt="icon">
                      </a>
                    {% endif %}
                  
                </div>
            </div>
        </div>
    </div>
</section>


{% schema %}
{
  "name": "General Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "pasta_shape_image",
      "label": "Shape Image"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": "Tagline",
      "default": "The Ina Paarman Blog:"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Great Food, Great Living"
    },
    {
      "type": "richtext",
      "id": "paragraph_1",
      "label": "Description"
    },
       {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text"
    }, 
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    }   
  ],
  "presets": [
    {
      "name": "General Header",
      "category": "Blog"
    }
  ]
}
{% endschema %}