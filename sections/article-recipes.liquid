<script>
  document.addEventListener('DOMContentLoaded', function () {
    const pdfSourceSelector = '.download-pdf';

    function injectPdfCss() {
      const style = document.createElement('style');
      style.id = 'pdf-temp-style';
      style.innerHTML = `
      .print-only {
    display: block !important;
    overflow: visible !important;
    padding-bottom: 20px !important;
  }
  .print-only * {
    overflow: visible !important;
  }
    .html2pdf__page-break {
  page-break-before: always;
  }
      `;
      document.head.appendChild(style);
    }

    function removePdfCss() {
      document.getElementById('pdf-temp-style')?.remove();
    }

    function downloadAsPdf() {
      const el = document.querySelector(pdfSourceSelector) || document.body;
      injectPdfCss();

      const opts = {
        margin: 2,
        filename: '{{ article.title | handleize }}.pdf',
        image: { type: 'jpeg', quality: 0.98 },
        html2canvas: { scale: 1, useCORS: true },
        jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' },
        pagebreak: { mode: ['css', 'legacy'] }
      };

      html2pdf()
        .set(opts)
        .from(el)
        .save()
        .finally(removePdfCss);
    } 

    const printBtn = document.getElementById('printPDF');
    const downloadBtn = document.getElementById('downloadPDF');

    if (printBtn) {
      printBtn.addEventListener('click', function (e) {
        e.preventDefault();
        window.print();
      });
    }

    if (downloadBtn) {
      downloadBtn.addEventListener('click', downloadAsPdf);
    }
  });
</script>


