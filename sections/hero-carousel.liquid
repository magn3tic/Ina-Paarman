<!-- Hero Start -->
<section class="hero-area">
  <div class="container-fluid" style ="overflow:hidden">
    {% if section.settings.patternimage != blank %}
      <img src="{{ section.settings.patternimage | image_url }}" alt="image" class="hero_bg">
    {{  }}
    {% endif %}

    <div class="row align-items-lg-center hero-row">
      <!-- Text Slider -->
      <div class="col-sm-6 order-sm-1 order-2">
        <div class="hero-text-slider">
          {% for block in section.blocks %}
          <div class="slide">
            <div class="hero-text pe-lg-5">
              {% if block.settings.sub_heading != blank %}
                <span class="d-block sub_heading">{{ block.settings.sub_heading }}</span>
              {% endif %}
              
              {% if block.settings.heading != blank %}
                <h1 class="heading">{{ block.settings.heading }}</h1>
              {% endif %}
              
              {% if block.settings.rich_content != blank %}
                {{ block.settings.rich_content }}
              {% endif %}
              
              {% if block.settings.cta_link != blank and block.settings.cta_text != blank %}
                <a href="{{ block.settings.cta_link }}" class="cta_btn btn_default">{{ block.settings.cta_text }}
                  <img src="https://cdn.shopify.com/s/files/1/0583/8415/4690/files/arrow-right-white.svg" alt="icon">
                </a>
              {% endif %}
            </div>
          </div>
          {% endfor %}
        </div>
      </div>

      <!-- Image Slider -->
      <div class="col-sm-6 order-sm-2 order-1">
        <div class="hero-slider">
          {% for block in section.blocks %}
          <div class="slide">
            <div class="hero-img">
              {% if block.settings.video_link != blank %}
                  {% if block.settings.image != blank %}
                    <a href="{{ block.settings.video_link }}" data-lity>
                      <div class="hero-play"><svg xmlns="http://www.w3.org/2000/svg" width="800px" height="800px" viewBox="0 0 24 24" fill="none">
<path fill-rule="evenodd" clip-rule="evenodd" d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22ZM10.6935 15.8458L15.4137 13.059C16.1954 12.5974 16.1954 11.4026 15.4137 10.941L10.6935 8.15419C9.93371 7.70561 9 8.28947 9 9.21316V14.7868C9 15.7105 9.93371 16.2944 10.6935 15.8458Z" fill="#fff"/>
</svg></div>
                      {{ block.settings.image | image_url: width: 420 | image_tag: preload: true , class : 'object-fit-cover' }}
                    </a>
                  {% endif %}
              {% else %}    
                  {% if block.settings.image != blank %}
                    {{ block.settings.image | image_url: width: 420 | image_tag: preload: true , class : 'object-fit-cover' }}
                  {% endif %}                
              {% endif %}    
            </div>
          </div>
          {% endfor %}
        </div>
        <div class="hero_slider_navigation d-flex align-items-center justify-content-between">
          <div class="hero-prev"><img src="https://cdn.shopify.com/s/files/1/0583/8415/4690/files/arrow-left.svg" alt="icon" width = "20" height = "20"></div>
          <div class="slides-numbers" style="display: block;">
            <span class="active">01</span> - <span class="total"></span>
          </div>
          <div class="hero-next"><img src="https://cdn.shopify.com/s/files/1/0583/8415/4690/files/arrow-right.svg" alt="icon" width = "20" height="20"></div>
        </div>
      </div>

    </div>
  </div>
</section>
<!-- Hero End -->

{% schema %}
{
  "name": "Hero Section",
  "settings": [
      {
        "type": "image_picker",
        "id": "patternimage",
        "label": "Sketch"
      }
  ],
  "blocks": [
    {
      "type": "hero_slide",
      "name": "Hero Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "video_link",
          "label": "Video URL"
        },
        {
          "type": "text",
          "id": "sub_heading",
          "label": "Tagline",
          "default": "Our Promise -"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "It Starts At Home"
        },
        {
          "type": "richtext",
          "id": "rich_content",
          "label": "Content",
          "default": "<p>It all began back in 1982...</p>"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "cta_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}