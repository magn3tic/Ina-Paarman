<section class="recipe-promo-area pb_40">
  <div class="container">
    <div class="row">
      <div class="col-lg-11 mx-auto">
        <div class="recipe-promo-inner">
          {% if article.image %}
            <div class="t-lg-5 pl-lg-5 mb-lg-5 h-100 w-100">
              <div class="half_bg d-none d-lg-block recipe-img" style="background: url({{ article.image | image_url }}) no-repeat scroll center center/cover;height:41vw;width:41vw;max-width:580px;max-height:620px"></div>
            </div>
          {% endif %}
          <div class="row">
            <div class="col-sm-6">
              {% if article.image %}
                <div class="content-img d-lg-none">
                  <img src="{{ article.image | image_url }}" alt="{{ article.title }}">
                </div>
              {% endif %}
            </div>
            <div class="col-sm-6">
              <div class="content-text">
                <div class="text-left mb-5">
                  <h1 class="recipe-heading">{{ article.title }}</h1>
                  {{ article.excerpt }}
                </div>
                <ul class="promo-list">
                  {% if article.metafields["global"]["Makes"] %}
                    <li>
                      <span class="d-block">Makes</span>
                      {{ article.metafields["global"]["Makes"] }}
                    </li>
                  {% endif %}
                  {% if article.metafields["global"]["Serves"] %}
                    <li>
                      <span class="d-block">Serves:</span>
                      {{ article.metafields["global"]["Serves"] }}
                    </li>
                  {% endif %}
                  {% assign occasions = article.metafields["global"]["Occasions"] | split: ',' %}
                  {% assign selected_occations = '' %}

                  {% for occasion in occasions %}
                    {% assign pair = occasion | split: ':' %}
                    {% if pair[1] == 'true' %}
                      {% if selected_occations != '' %}
                        {% assign selected_occations = selected_occations | append: ', ' %}
                      {% endif %}
                      {% assign selected_occations = selected_occations | append: pair[0] | replace: '-', ' ' | capitalize %}
                    {% endif %}
                  {% endfor %}

                  {% if selected_occations != '' %}
                    <li class="text-capitalize">
                      <span class="d-block">OCCASION:</span>
                      {{ selected_occations }}
                    </li>
                  {% endif %}

                  {% assign categories = article.metafields["global"]["Recipe-Category"] | split: ',' %}
                  {% assign selected_categories = '' %}

                  {% for category in categories %}
                    {% assign pair = category | split: ':' %}
                    {% if pair[1] == 'true' %}
                      {% if selected_categories != '' %}
                        {% assign selected_categories = selected_categories | append: ', ' %}
                      {% endif %}
                      {% assign category_name = pair[0] | replace: '-', ' ' | capitalize %}

                      {% assign url = shop_url | append: '/pages/recipe-type-' | append: pair[0] %}

                      {% assign selected_categories = selected_categories | append: '<a href="' | append: url | append: '">' | append: category_name | append: '</a>' %}
                    {% endif %}
                  {% endfor %}

                  {% if selected_categories != '' %}
                    <li class="text-capitalize">
                      <span class="d-block">Recipe Category:</span>
                      {{ selected_categories }}
                    </li>
                  {% endif %}

                  {% if article.metafields["global"]["Products-in-this-recipe"] %}
                    <li>
                      <span class="d-block">Products in this recipe:</span>
                      {{ article.metafields["global"]["Products-in-this-recipe"] }}
                    </li>
                  {% endif %}
                </ul>
                <div class="promo-actions">
                  <ul>
                    <li>
                      <a id="printPDF"><img
                          src="https://cdn.shopify.com/s/files/1/0583/8415/4690/files/download.svg"
                          alt="icon"
                          class="small-icons"></a>
                    </li>
                    <li>
                      <a id="downloadPDF"><img
                          src="https://cdn.shopify.com/s/files/1/0583/8415/4690/files/print.svg"
                          alt="icon"
                          class="small-icons"></a>
                    </li>
                  </ul>

                  <ul>
                    <li><a href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ article.url }}" target="_blank"><img src="https://cdn.shopify.com/s/files/1/0583/8415/4690/files/facebook-red.svg" alt="Share on Facebook" class="small-icons"></a></li>
                    <li><a href="https://twitter.com/intent/tweet?url={{ shop.url }}{{ article.url }}&text={{ article.title }}" target="_blank"><img src="https://cdn.shopify.com/s/files/1/0583/8415/4690/files/twitter-red.svg" alt="Share on Twitter" class="small-icons"></a></li>
                    <li><a href="https://www.instagram.com/inapaarmanskitchen" target="_blank"><img src="https://cdn.shopify.com/s/files/1/0583/8415/4690/files/instagram-red.svg" alt="Instagram" class="small-icons"></a></li>
                    <li><a href="mailto:?subject={{ shop.url }}{{ article.title }}&body={{ article.url }}"><img src="https://cdn.shopify.com/s/files/1/0583/8415/4690/files/email-red.svg" alt="Share via Email" class="small-icons"></a></li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
