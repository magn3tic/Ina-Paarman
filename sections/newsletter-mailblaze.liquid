{% if section.settings.style == 'style-2' %}
<!-- Content Start -->
<section class="newsletter-area-style3" style="background: url({{ section.settings.background_image | image_url }}) no-repeat scroll center center/cover">
    <div class="container">
        <div class="row align-items-md-end">
            <div class="col-md-6">
                <div class="content-text pe-lg-5">
                    {% if section.settings.sub_heading != blank %}
                    <span class="d-block text_light sub_heading">{{ section.settings.sub_heading }}</span>
                    {% endif %}
                    {% if section.settings.main_heading != blank %}
                    <h3 class="heading text_light">{{ section.settings.main_heading }}</h3>
                    {% endif %}
                    {% if section.settings.description != blank %}
                      {{ section.settings.description }}
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="ps-lg-5">
                  <iframe src="https://control.mailblaze.com/index.php/lists/nh3494wv8a7d6/brand/sz074l2o7f895/subscribe?output=embed&width=100%&height=350" width="100%" height="360" style = "background-color:#064956;padding:20px;border-radius:8px" frameborder="0" scrolling="no"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Content End -->
{% else %}
<!-- Content Start -->
<section class="newsletter-area">
    {% if section.settings.shape_image_left %}
    <img src="{{ section.settings.shape_image_left | image_url }}" width = "{{ section.settings.shape_image_left.width }}" height = "{{ section.settings.shape_image_left.height }}" alt="image" class="newsletter_shape">
    {% endif %}
    {% if section.settings.shape_image_right %}
    <img src="{{ section.settings.shape_image_right | image_url }}" width = "{{ section.settings.shape_image_right.width }}" height = "{{ section.settings.shape_image_right.height }}" alt="image" class="newsletter_shape_right">
    {% endif %}
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-7 mx-auto">
                <div class="inner text-center">
                    {% if section.settings.sub_heading != blank %}
                    <span class="d-block text_light sub_heading">{{ section.settings.sub_heading }}</span>
                    {% endif %}
                    {% if section.settings.main_heading != blank %}
                    <h3 class="heading text_light">{{ section.settings.main_heading }}</h3>
                    {% endif %}
                    {% if section.settings.description != blank %}
                      {{ section.settings.description }}
                    {% endif %}
                    <iframe src="https://control.mailblaze.com/index.php/lists/nh3494wv8a7d6/brand/dd699ot1jk446/subscribe?output=embed&width=600&height=auto" width="100%" height="365" frameborder="0" scrolling="no"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Content End -->
{% endif %}
{% schema %}
{
  "name": "Newsletter Mailblaze",
  "settings": [
    {
      "type": "select",
      "id": "style",
      "label": "Style",
      "options": [
        {
          "value": "style-1",
          "label": "Style 1"
        },
        {
          "value": "style-2",
          "label": "Style 2"
        }
      ],
      "default": "style-1"
    },     
    {
      "type": "text",
      "id": "sub_heading",
      "label": "Pre- Heading",
      "default": "- sign up -"
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "Ina Paarmanâ€™s Kitchen Newsletter"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Content"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "header",
      "content": "Shape Image"
    },
    {
      "type": "image_picker",
      "id": "shape_image_left",
      "label": "Image: Left"
    },
    {
      "type": "image_picker",
      "id": "shape_image_right",
      "label": "Image: Right"
    }    
  ],
  "presets": [
    {
      "name": "Newsletter Mailblaze",
      "category": "Custom"
    }
  ]
}
{% endschema %}