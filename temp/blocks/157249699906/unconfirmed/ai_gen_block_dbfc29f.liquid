{% doc %}
  @prompt
    Create a section called "Newsletter Archive", which is styled the same as the "Featured Blog Posts" section, where cards can be added, three per row, containing an image, title, sub-title and button.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-newsletter-archive-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-newsletter-archive-container-{{ ai_gen_id }} {
    max-width: 1350px;
    margin: 0 auto;
    padding: 0 15px;
  }

  .ai-newsletter-archive-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 40px;
  }

  .ai-newsletter-archive-title-{{ ai_gen_id }} {
    font-family: var(--bs-headings-font-family, 'Ubuntu', sans-serif);
    font-size: {{ block.settings.heading_size }}px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 10px;
  }

  .ai-newsletter-archive-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
  }

  .ai-newsletter-archive-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .ai-newsletter-card-{{ ai_gen_id }} {
    background: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.125);
    border-radius: calc(0.3rem * 1rem);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-newsletter-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .ai-newsletter-card-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f8f9fa;
  }

  .ai-newsletter-card-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-newsletter-card-image-wrapper-{{ ai_gen_id }} svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-newsletter-card-body-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-newsletter-card-title-{{ ai_gen_id }} {
    font-family: var(--bs-headings-font-family, 'Ubuntu', sans-serif);
    font-size: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #1f2937;
    margin: 0 0 10px;
  }

  .ai-newsletter-card-subtitle-{{ ai_gen_id }} {
    font-size: 14px;
    color: #455a64;
    margin: 0 0 20px;
    line-height: 1.5;
  }

  .ai-newsletter-card-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: calc(0.3rem * 1rem) calc(1rem * 1rem);
    background: linear-gradient(90deg, rgba(146, 64, 14, 1), rgba(205, 103, 41, 1) 100%);
    color: #ffffff;
    text-decoration: none;
    border-radius: calc(0.3rem * 1rem);
    font-weight: 500;
    letter-spacing: 1px;
    text-transform: none;
    transition: opacity 0.3s ease;
    border: 1px solid transparent;
  }

  .ai-newsletter-card-button-{{ ai_gen_id }}:hover {
    opacity: 0.9;
    color: #ffffff;
  }

  .ai-newsletter-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #455a64;
    font-size: 16px;
  }

  @media (max-width: 991px) {
    .ai-newsletter-archive-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
  }

  @media (max-width: 575px) {
    .ai-newsletter-archive-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .ai-newsletter-archive-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.7);
    }

    .ai-newsletter-archive-subtitle-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheading_size }}px * 0.9);
    }
  }
{% endstyle %}

<div class="ai-newsletter-archive-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-newsletter-archive-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-newsletter-archive-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-newsletter-archive-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-newsletter-archive-subtitle-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% assign has_cards = false %}
    {% for i in (1..12) %}
      {% assign card_enabled_key = 'card_' | append: i | append: '_enabled' %}
      {% if block.settings[card_enabled_key] %}
        {% assign has_cards = true %}
        {% break %}
      {% endif %}
    {% endfor %}

    {% if has_cards %}
      <div class="ai-newsletter-archive-grid-{{ ai_gen_id }}">
        {% for i in (1..12) %}
          {% liquid
            assign card_enabled_key = 'card_' | append: i | append: '_enabled'
            assign card_image_key = 'card_' | append: i | append: '_image'
            assign card_title_key = 'card_' | append: i | append: '_title'
            assign card_subtitle_key = 'card_' | append: i | append: '_subtitle'
            assign card_button_text_key = 'card_' | append: i | append: '_button_text'
            assign card_button_link_key = 'card_' | append: i | append: '_button_link'

            assign card_enabled = block.settings[card_enabled_key]
            assign card_image = block.settings[card_image_key]
            assign card_title = block.settings[card_title_key]
            assign card_subtitle = block.settings[card_subtitle_key]
            assign card_button_text = block.settings[card_button_text_key]
            assign card_button_link = block.settings[card_button_link_key]
          %}

          {% if card_enabled %}
            <div class="ai-newsletter-card-{{ ai_gen_id }}">
              <div class="ai-newsletter-card-image-wrapper-{{ ai_gen_id }}">
                {% if card_image %}
                  <img
                    src="{{ card_image | image_url: width: 600 }}"
                    alt="{{ card_image.alt | escape }}"
                    class="ai-newsletter-card-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  {{ 'image' | placeholder_svg_tag }}
                {% endif %}
              </div>
              <div class="ai-newsletter-card-body-{{ ai_gen_id }}">
                {% if card_title != blank %}
                  <h3 class="ai-newsletter-card-title-{{ ai_gen_id }}">{{ card_title }}</h3>
                {% endif %}
                {% if card_subtitle != blank %}
                  <p class="ai-newsletter-card-subtitle-{{ ai_gen_id }}">{{ card_subtitle }}</p>
                {% endif %}
                {% if card_button_text != blank %}
                  <a
                    href="{{ card_button_link | default: '#' }}"
                    class="ai-newsletter-card-button-{{ ai_gen_id }}"
                  >
                    {{ card_button_text }}
                  </a>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-newsletter-empty-state-{{ ai_gen_id }}">
        Enable cards below to display your newsletter archive
      </div>
    {% endif %}
  </div>
</div>

