{% if section.settings.style == 'style-2' %}

<!-- Content Start -->
<section class="newsletter-area-style3" style="background: url({{ section.settings.background_image | image_url }}) no-repeat scroll center center/cover">
    <div class="container"> 
        <div class="row align-items-md-end">
            <div class="col-md-6">
                <div class="content-text pe-lg-5">
                    {% if section.settings.sub_heading != blank %}
                    <span class="d-block text_light sub_heading">{{ section.settings.sub_heading }}</span>
                    {% endif %}
                    {% if section.settings.main_heading != blank %}
                    <h3 class="heading text_light">{{ section.settings.main_heading }}</h3>
                    {% endif %}
                    {% if section.settings.description != blank %}
                      {{ section.settings.description }}
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="ps-lg-5">
                  {% if section.settings.form_id != blank %}
                    <div class="shopify-custom-form" data-form-id="{{ section.settings.form_id }}"></div>
                  {% else %}
                    {% comment %} --- Fallback Form --- {% endcomment %}
                    {% form 'customer', class: 'newsletter-form' %}
                    <input type="hidden" name="contact[tags]" value="newsletter">
                      <label for="newsletter-input-email" class="d-none">
                        Email
                      </label>
                      <input 
                        id="newsletter-input-email"
                        type="email" 
                        name="contact[email]" 
                        size="30"
                        value="{% if customer.email != blank %}{{ customer.email }}{% endif %}" 
                        placeholder="E-MAIL ADDRESS"
                        autocorrect="off" 
                        autocapitalize="off">
                      <button type="submit" name="commit" class="cta_btn btn_default">SUBSCRIBE TO NEWSLETTER <img src="https://cdn.shopify.com/s/files/1/0583/8415/4690/files/arrow-right-white.svg" alt="icon" width="16" height="16"></button>
                    
                    {{ form.errors | default_errors }}
                    {% if form.posted_successfully? %}
                      <p class="mt-3">
                        {{ 'general.newsletter.confirmation_text' | t }}
                      </p>
                    {% endif %} 
                    {% endform %}
                  {% endif %}                  
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Content End -->

{% else %}
<!-- Content Start -->
<section class="newsletter-area">

    {% if section.settings.shape_image_left %}
    <img src="{{ section.settings.shape_image_left | image_url }}" alt="image" class="newsletter_shape" width="150" height="150">
    {% endif %}
    {% if section.settings.shape_image_right %}
    <img src="{{ section.settings.shape_image_right | image_url }}" alt="image" class="newsletter_shape_right" width="150" height="150">
    {% endif %}
  
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-7 mx-auto">
                <div class="inner text-center">
                    {% if section.settings.sub_heading != blank %}
                    <span class="d-block text_light sub_heading">{{ section.settings.sub_heading }}</span>
                    {% endif %}
                    {% if section.settings.main_heading != blank %}
                    <h3 class="heading text_light">{{ section.settings.main_heading }}</h3>
                    {% endif %}
                    {% if section.settings.description != blank %}
                      {{ section.settings.description }}
                    {% endif %}

                    {% if section.settings.form_id != blank %}
                      <div class="shopify-custom-form" data-form-id="{{ section.settings.form_id }}"></div>
                    {% else %}
                      {% comment %} --- Fallback Form --- {% endcomment %}
                      {% form 'customer', class: 'newsletter-form' %}
                      <input type="hidden" name="contact[tags]" value="newsletter">
                        <label for="newsletter-input-email" class="d-none">
                          Email
                        </label>
                        <input 
                          id="newsletter-input-email"
                          type="email" 
                          name="contact[email]" 
                          size="30"
                          value="{% if customer.email != blank %}{{ customer.email }}{% endif %}" 
                          placeholder="E-MAIL ADDRESS"
                          autocorrect="off" 
                          autocapitalize="off">
                        <button type="submit" name="commit" class="cta_btn newsletter_btn btn_default">DOWNLOAD<img src="https://cdn.shopify.com/s/files/1/0583/8415/4690/files/arrow-right-white.svg" alt="icon" width="16" height="16"></button>
                      
                      {{ form.errors | default_errors }}
                      {% if form.posted_successfully? %}
                        <p class="mt-3">
                          {{ 'general.newsletter.confirmation_text' | t }}
                        </p>
                      {% endif %} 
                      
                      {% endform %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Content End -->
{% endif %}

{% schema %}
{
  "name": "Download PDF Form",
  "settings": [
    {
      "type": "select",
      "id": "style",
      "label": "Style",
      "options": [
        {
          "value": "style-1",
          "label": "Style 1"
        },
        {
          "value": "style-2",
          "label": "Style 2"
        }
      ],
      "default": "style-1"
    },
    {
      "type": "text",
      "id": "form_id",
      "label": "Shopify Form ID",
      "info": "Enter the ID of your Shopify Form. Requires the Forms App Embed to be enabled in Theme Settings. Leave blank for default email signup."
    },     
    {
      "type": "text",
      "id": "sub_heading",
      "label": "Pre- Heading",
      "default": "– PDF Download –"
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "Download Our Recipe Book"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Content"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image (Style 2 only)"
    },
    {
      "type": "header",
      "content": "Shape Image (Style 1 only)"
    },
    {
      "type": "image_picker",
      "id": "shape_image_left",
      "label": "Image: Left"
    },
    {
      "type": "image_picker",
      "id": "shape_image_right",
      "label": "Image: Right"
    }    
  ],
  "presets": [
    {
      "name": "Download PDF Form",
      "category": "Custom"
    }
  ]
}
{% endschema %}