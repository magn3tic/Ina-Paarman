{% doc %}
  @prompt
    blocks in a grid of 3 columns, where I can upload an image, title, sub-title and button
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-grid-container-{{ ai_gen_id }} {
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    max-width: 1350px;
    margin: 0 auto;
  }

  .ai-grid-item-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .ai-grid-item-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .ai-grid-item-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-grid-item-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-grid-item-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-grid-item-content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-grid-item-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px 0;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ai-grid-item-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0 0 20px 0;
    flex-grow: 1;
  }

  .ai-grid-item-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    text-align: center;
    transition: background-color 0.3s ease;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ai-grid-item-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_text_color }};
  }

  @media screen and (max-width: 989px) {
    .ai-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-grid-container-{{ ai_gen_id }} {
      padding: 30px 15px;
    }
  }
{% endstyle %}

<div class="ai-grid-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-grid-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% liquid
        assign image_key = 'image_' | append: i
        assign title_key = 'title_' | append: i
        assign subtitle_key = 'subtitle_' | append: i
        assign button_text_key = 'button_text_' | append: i
        assign button_link_key = 'button_link_' | append: i

        assign image = block.settings[image_key]
        assign title = block.settings[title_key]
        assign subtitle = block.settings[subtitle_key]
        assign button_text = block.settings[button_text_key]
        assign button_link = block.settings[button_link_key]
      %}

      <div class="ai-grid-item-{{ ai_gen_id }}">
        <div class="ai-grid-item-image-wrapper-{{ ai_gen_id }}">
          {% if image %}
            <img
              src="{{ image | image_url: width: 800 }}"
              alt="{{ image.alt | escape }}"
              loading="lazy"
              width="{{ image.width }}"
              height="{{ image.height }}"
              class="ai-grid-item-image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-grid-item-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>

        <div class="ai-grid-item-content-{{ ai_gen_id }}">
          {% if title != blank %}
            <h3 class="ai-grid-item-title-{{ ai_gen_id }}">{{ title }}</h3>
          {% endif %}

          {% if subtitle != blank %}
            <div class="ai-grid-item-subtitle-{{ ai_gen_id }}">{{ subtitle }}</div>
          {% endif %}

          {% if button_text != blank %}
            <a
              href="{{ button_link }}"
              class="ai-grid-item-button-{{ ai_gen_id }}"
            >
              {{ button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

